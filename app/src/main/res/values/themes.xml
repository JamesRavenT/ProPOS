<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WaZabiPOS" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/wabizabi</item>
        <item name="colorPrimaryVariant">@color/dirtywhite</item>
        <item name="colorOnPrimary">@color/wabizabi</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/wabizabi</item>
        <item name="colorSecondaryVariant">@color/wabizabi</item>
        <item name="colorOnSecondary">@color/wabizabi</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.WaZabiPOSOpening" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/wabizabi</item>
        <item name="colorPrimaryVariant">@color/wabizabi</item>
        <item name="colorOnPrimary">@color/wabizabi</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dirtywhite</item>
        <item name="colorSecondaryVariant">@color/dirtywhite</item>
        <item name="colorOnSecondary">@color/dirtywhite</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ToolbarStyle">
        <item name="android:textColorPrimary">@color/wabizabi</item>
        <item name="android:textColorSecondary">@color/wabizabi</item>
        <item name="actionMenuTextColor">@color/wabizabi</item>
    </style>
</resources>