<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/M04F01SF03D04_RVLayout"
    android:layout_width="300dp"
    android:layout_height="65dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/M04F01SF03D04_RVContainer"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/bg_shape_rectangle_stroke_dark_marg50n_tlr"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/M04F01SF03D04_RVDiscountName"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_sans_light"
            android:text="Discount Name"
            android:textColor="@color/wabizabi"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.166" />

        <TextView
            android:id="@+id/M04F01SF03D04_RVDiscountPercentage"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_sans_light"
            android:text="0% Discount"
            android:textColor="@color/wabizabi"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/M04F01SF03D04_RVDiscountName"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/M04F01SF03D04_RVDiscountFrequency"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_sans_light"
            android:text="0 Items"
            android:textColor="@color/wabizabi"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/M04F01SF03D04_RVDiscountPercentage"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/M04F01SF03D04_RVRemoveBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/M04F01SF03D04_RVDiscountName"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icon_button_remove_red" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>